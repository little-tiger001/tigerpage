---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: '首页', href: '/' },
    { linkText: '兴趣爱好', href: '/hobbies' },
    { linkText: '网站收藏', href: '/bookmarks' },
    { linkText: '关于我们', href: '/about' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2 hover:text-primary transition-colors">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>