---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "电商网站",
    description: "一个完整的电商平台，包含商品管理、购物车、支付等功能。",
    tech: ["React", "Node.js", "MongoDB"]
  },
  {
    title: "任务管理系统",
    description: "团队协作的任务管理工具，支持看板视图和实时同步。",
    tech: ["Vue.js", "Firebase", "TailwindCSS"]
  },
  {
    title: "个人博客系统",
    description: "基于静态站点生成器的个人博客，支持Markdown写作。",
    tech: ["Astro", "Markdown", "Netlify"]
  }
];
---

<Layout title="项目展示 - LittleTiger">
  <div class="py-12">
    <h1 class="text-3xl font-bold mb-8">我的项目</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-bold mb-2">{project.title}</h2>
            <p class="text-gray-300 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2">
              {project.tech.map((tech) => (
                <span class="px-2 py-1 bg-blue-900 text-blue-200 text-xs rounded">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <h2 class="text-2xl font-bold mb-4">更多项目</h2>
      <p class="mb-6">你可以在我的 GitHub 上查看更多开源项目</p>
      <a href="https://github.com/yourusername" class="btn btn-lg inline-block" target="_blank" rel="noopener noreferrer">
        访问我的 GitHub
      </a>
    </div>
  </div>
</Layout>